<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/msg_list_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:paddingTop="10dp"
            android:textSize="20sp" />

        <ImageView 
            android:id="@+id/msg_list_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:src="@drawable/ic_menu_attachment_holo_light" 
            android:contentDescription="@string/msg_list_attachment"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/msg_list_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.3"
            android:gravity="right"
            android:paddingTop="10dp"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg_list_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2" />

</LinearLayout>