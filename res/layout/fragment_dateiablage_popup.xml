<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:fadingEdgeLength="0dip"
        android:paddingLeft="1dip"
        android:paddingRight="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dip"
            android:paddingTop="4dip" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_menu_delete"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/delete"
                android:textColor="#e3e3e3" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_menu_edit"
                android:paddingRight="10dp"
                android:text="@string/rename"
                android:textColor="#e3e3e3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_menu_directions"
                android:paddingRight="5dp"
                android:text="@string/move"
                android:textColor="#e3e3e3" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/action_arrow_up" 
        android:contentDescription="@string/move"/>

</RelativeLayout>